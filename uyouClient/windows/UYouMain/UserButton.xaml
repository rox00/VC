<UserControl x:Class="UYouMain.UserButton"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UYouMain"
             Focusable="True"
             Width="49" Height="48" ToolTip="设定这个位置的键盘按钮">
    <UserControl.Background>
        <ImageBrush ImageSource="Resources/imgs/black/虚拟键1.png"></ImageBrush>
    </UserControl.Background>
    <Grid x:Name="grid1">
        <TextBox Focusable="True" x:Name="textbox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" CaretBrush="White" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="删除" x:Name="menuDel"  >
                    </MenuItem>
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
    </Grid>
</UserControl>
